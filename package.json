{
  "name": "encounterlog",
  "productName": "EncounterLog",
  "version": "2.6.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/rrgeorge/encounterlog"
  },
  "os": [
    "darwin",
    "win32",
    "linux"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-mac": "security unlock;electron-builder build --mac",
    "build-win": "electron-builder build --win",
    "build-linux": "electron-builder build --linux",
    "build-all": "electron-builder build -mwl",
    "publish-mac": "electron-builder -p always --mac",
    "publish-win": "electron-builder -p always --win",
    "publish-linux": "electron-builder -p always --linux",
    "publish-all": "electron-builder -p always -mwl",
    "release": "source electron-builder.env;security unlock&&git tag -f \"v$(jq -r .version package.json)\"&&git push&&git push --tags&&yarn publish-all",
    "postinstall": "electron-builder install-app-deps",
    "app": "electron ."
  },
  "build": {
    "protocols": [
      {
        "name": "EncounterLog",
        "schemes": [
          "encounterlog"
        ]
      }
    ],
    "appId": "online.play5e.EncounterLog",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": "x64"
        }
      ],
      "files": [
        "**/*",
        "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
        "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
        "!**/node_modules/*.d.ts",
        "!**/node_modules/.bin",
        "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
        "!.editorconfig",
        "!**/._*",
        "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
        "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
        "!**/{appveyor.yml,.travis.yml,circle.yml}",
        "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
        "!**/.env",
        "!scripts",
        "!*.otf",
        "!dnd.traineddata",
        "!**/*.dylib",
        "!**/*.so.*",
        "!**/*.so"
      ]
    },
    "mac": {
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "target": [
        {
          "target": "dmg",
          "arch": "universal"
        },
        {
          "target": "zip",
          "arch": "universal"
        }
      ],
      "files": [
        "**/*",
        "!**/node_modules/sharp/vendor/**/include/*",
        "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
        "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
        "!**/node_modules/*.d.ts",
        "!**/node_modules/.bin",
        "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
        "!.editorconfig",
        "!**/._*",
        "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
        "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
        "!**/{appveyor.yml,.travis.yml,circle.yml}",
        "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
        "!**/.env",
        "!scripts",
        "!*.otf",
        "!dnd.traineddata",
        "!**/*.dll",
        "!**/*.so.*",
        "!**/*.so"
      ]
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": "x64"
        },
        {
          "target": "AppImage",
          "arch": "x64"
        }
      ],
      "files": [
        "**/*",
        "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
        "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
        "!**/node_modules/*.d.ts",
        "!**/node_modules/.bin",
        "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
        "!.editorconfig",
        "!**/._*",
        "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
        "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
        "!**/{appveyor.yml,.travis.yml,circle.yml}",
        "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
        "!**/.env",
        "!scripts",
        "!*.otf",
        "!dnd.traineddata",
        "!**/dnd.traineddata",
        "!**/*.dylib",
        "!**/*.dll"
      ]
    },
    "extraResources": [
      "*.otf"
    ],
    "asarUnpack": [
      "**/node_modules/sharp/vendor/**/lib/*"
    ],
    "afterSign": "scripts/notarize.js",
    "publish": [
      "github"
    ]
  },
  "author": {
    "name": "Robert George",
    "email": "rrgeorge@rrgeorge.com"
  },
  "license": "MIT",
  "dependencies": {
    "@google-cloud/vision": "^2.3.8",
    "@journeyapps/sqlcipher": "^5.3.1",
    "adm-zip": "^0.5.5",
    "build": "^0.1.4",
    "electron-dl": "^3.2.1",
    "electron-preferences": "^2.3.1",
    "electron-progressbar": "^2.0.1",
    "electron-updater": "^4.3.9",
    "fuse.js": "^6.5.3",
    "he": "^1.2.0",
    "html-to-text": "^8.0.0",
    "jsdom": "^17.0.0",
    "jstoxml": "^2.0.6",
    "mac": "^0.4.0",
    "react-color": "^2.19.3",
    "react-modal": "^3.14.4",
    "sharp": "^0.30.3",
    "slugify": "^1.5.3",
    "tiny-async-pool": "^1.2.0",
    "tmp": "^0.2.1",
    "uuid": "^8.3.2",
    "ws": "^8.5.0"
  },
  "resolutions": {
    "@electron/universal": "^1.2.1"
  },
  "devDependencies": {
    "@electron/universal": "^1.2.1",
    "electron": "^18.0.3",
    "electron-builder": "^23.0.3",
    "electron-notarize": "^1.1.0"
  },
  "packageManager": "yarn@3.2.0"
}
