{
  "name": "encounterlog",
  "productName": "EncounterLog",
  "version": "2.1.0",
  "description": "Connect D&D Beyond to EncounterPlus",
  "repository": {
    "type": "git",
    "url": "https://github.com/rrgeorge/encounterlog"
  },
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-mac": "security unlock;electron-builder build --mac",
    "build-win": "npm_config_platform=win32 npm_config_arch=x64 yarn add opencv4nodejs-prebuilt sharp; electron-builder build --win;yarn add opencv4nodejs-prebuilt sharp",
    "build-deb": "npm_config_platform=linux npm_config_arch=x64 yarn add opencv4nodejs-prebuilt sharp; electron-builder build --linux deb;yarn add opencv4nodejs-prebuilt sharp",
    "build": "yarn build-mac;yarn build-win;yarn build-deb",
    "postinstall": "electron-builder install-app-deps",
    "app": "electron ."
  },
  "build": {
    "appId": "online.play5e.EncounterLog",
    "win": {
      "files": [
        "**/*",
        "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
        "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
        "!**/node_modules/*.d.ts",
        "!**/node_modules/.bin",
        "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
        "!.editorconfig",
        "!**/._*",
        "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
        "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
        "!**/{appveyor.yml,.travis.yml,circle.yml}",
        "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
        "!**/.env",
        "!scripts",
        "!*.otf",
        "dnd.traineddata",
        "!**/*.dylib",
        "!**/*.so.*",
        "!**/*.so"
      ]
    },
    "mac": {
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "target": [
        "dmg"
      ],
      "files": [
        "**/*",
        "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
        "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
        "!**/node_modules/*.d.ts",
        "!**/node_modules/.bin",
        "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
        "!.editorconfig",
        "!**/._*",
        "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
        "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
        "!**/{appveyor.yml,.travis.yml,circle.yml}",
        "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
        "!**/.env",
        "!scripts",
        "!*.otf",
        "!dnd.traineddata",
        "!**/*.dll",
        "!**/*.so.*",
        "!**/*.so"
      ]
    },
    "linux": {
      "target": [
        "deb"
      ],
      "files": [
        "**/*",
        "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
        "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
        "!**/node_modules/*.d.ts",
        "!**/node_modules/.bin",
        "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
        "!.editorconfig",
        "!**/._*",
        "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
        "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
        "!**/{appveyor.yml,.travis.yml,circle.yml}",
        "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
        "!**/.env",
        "!scripts",
        "!*.otf",
        "!dnd.traineddata",
        "!**/dnd.traineddata",
        "!**/*.dylib",
        "!**/*.dll"
      ]
    },
    "asarUnpack": [
      "**/node_modules/sharp/**",
      "**/node_modules/opencv4nodejs-prebuilt/**"
    ],
    "extraResources": [
      "*.otf",
      "dnd.traineddata"
    ],
    "afterSign": "scripts/notarize.js"
  },
  "author": {
    "name": "Robert George",
    "email": "rrgeorge@rrgeorge.com"
  },
  "license": "MIT",
  "dependencies": {
    "@google-cloud/vision": "^2.3.8",
    "@journeyapps/sqlcipher": "^5.2.0",
    "adm-zip": "^0.5.5",
    "build": "^0.1.4",
    "electron-dl": "^3.2.1",
    "electron-preferences": "^2.3.1",
    "electron-progressbar": "^2.0.1",
    "he": "^1.2.0",
    "html-to-text": "^8.0.0",
    "jstoxml": "^2.0.6",
    "mac": "^0.4.0",
    "opencv4nodejs-prebuilt": "^5.3.3",
    "sharp": "^0.29.0",
    "slugify": "^1.5.3",
    "tmp": "^0.2.1",
    "uuid": "^8.3.2",
    "ws": "^7.4.5"
  },
  "devDependencies": {
    "electron": "^13.2.3",
    "electron-builder": "^22.11.7",
    "electron-notarize": "^1.1.0",
    "electron-rebuild": "^3.2.1"
  }
}
